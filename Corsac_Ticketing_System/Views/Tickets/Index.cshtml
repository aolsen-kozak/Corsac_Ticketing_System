@model IEnumerable<Corsac_Ticketing_System.Models.Ticket>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create Ticket", "Create")
    </p>
    <p>
        @Html.ActionLink("New Unassigned Tickets", "Index", new { list = "newUnassigned" })
        @Html.ActionLink("Open Tickets", "Index", new { list = "open" })
        @Html.ActionLink("On Hold Tickets", "Index", new { list = "onHold" })
        @Html.ActionLink("Closed/Cancelled Tickets", "Index", new { list = "closed" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Assigned To
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDescription)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDescription)
            </td>
            <td>
                @Html.ActionLink("View", "Edit", new { refTicketid=item.Id }) |
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
